  Hs-Source-Dirs:     .
  Main-Is:            Main.hs
  Ghc-Options:        -O2 -Wall -threaded
  Ghc-Prof-Options:   -auto-all

  if flag(executable)
    Buildable:      True
  else
    Buildable:      False
